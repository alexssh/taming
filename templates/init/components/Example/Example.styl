/* Example.styl */

.Example
    font-family $font
    font-size 17px
    padding $m*4

    @media $screen_desktop
        width 300px
        box-shadow inset 0 0 0 $m rgba(0, 0, 0, 0.3)

    @media $screen_mobile
        width 100%
        box-shadow inset 0 0 0 $m rgba(0, 0, 0, 1)

    &__wrap
        display flex
        flex-flow row nowrap
        margin-top $m*2

    &__button
        flex 1 1 auto

        &_bold
            font-weight bold
